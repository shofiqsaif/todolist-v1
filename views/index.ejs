<%- include("header") -%>
     <div class="box" id="heading">
        <h1>
            <%= title %>
        </h1>
    </div>

    <div class="box">
        <ul>
            <%for(let i=0;i<newListItems.length;i++){%>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" onChange="this.form.submit()" name="itemID" value=<%= newListItems[i]._id %>>
                        <input type="hidden" name="listName" value=<%=title%>>
                        <p>
                            <%=newListItems[i].name%>
                        </p>
                    </div>
                </form>
                
                <%}%>
        </ul>
        <form action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item">
            <button type="submit" name="list" value="<%= title %>">+</button>
        </form>
    </div>

<%- include("footer") -%>